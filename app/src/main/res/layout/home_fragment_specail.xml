<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingHorizontal="20dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity">
    <RelativeLayout
        android:id="@+id/rl_header_home_fagment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imv_to_sale"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_marginStart="-10dp"
            android:src="@drawable/icon_special"/>
        <ImageView
            android:id="@+id/imv_home_special_tosearch"
            android:layout_width="34dp"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:background="@drawable/bacgroud_seach"
            android:layout_height="34dp"
            android:src="@drawable/ic_seach_special" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/fode_header"
        android:layout_width="wrap_content"
        android:layout_below="@id/rl_header_home_fagment"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Food"
            android:fontFamily="sans-serif-thin"
            android:textSize="28sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Special For You"
            android:textSize="28sp" />
    </LinearLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_home_special"
        android:layout_marginHorizontal="-10dp"
        style="@style/custom_text_tablayout"
        android:layout_width="match_parent"
        app:tabIndicatorColor="@color/color_tablayout"
        android:layout_below="@id/fode_header"
        android:layout_height="wrap_content"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpage2_home_special_layout"
        android:layout_marginTop="30dp"
        android:layout_above="@id/ln_bottom_home"
        android:layout_width="match_parent"
        android:layout_below="@+id/tab_layout_home_special"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/ln_bottom_home"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/border_bgr_item_fode_home"
        android:layout_alignParentBottom="true"
        android:layout_height="140dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_title_item_home"
            android:layout_width="wrap_content"
            android:paddingStart="10dp"
            android:layout_height="wrap_content"
            android:text="Your informations"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_below="@id/tv_title_item_home"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_ln_botttom_home"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ giao hàng"
                    android:textColor="@color/sub_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="226 Hoàng Quốc Việt-Hà Nội"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:layout_width="35dp"
        android:layout_marginBottom="-20dp"
        android:layout_marginEnd="30dp"
        android:layout_above="@id/ln_bottom_home"
        android:padding="10dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/border_bgr_edt"
        android:src="@drawable/icon_edit_item_home"/>
</RelativeLayout>