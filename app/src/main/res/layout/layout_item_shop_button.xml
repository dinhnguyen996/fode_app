<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    android:layout_height="65dp"
    android:id="@+id/ln_gotolist_buy"
    android:paddingHorizontal="12dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/border_button_custom">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imv_icon_shop_button"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:padding="13dp"
            android:background="@drawable/bgr_ic_item_shop_button"
            android:src="@drawable/icon_shop_button"/>
        <TextView
            android:layout_alignEnd="@id/imv_icon_shop_button"
            android:layout_width="14dp"
            android:gravity="center"
            android:textSize="9sp"
            android:layout_height="14dp"
            android:text="1"
            android:textColor="@color/white"
            android:background="@drawable/bgr_ic_sub_item_shop_buttom"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_home_quanlity"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:text="2 item"
        android:textSize="18sp"
        android:paddingEnd="10dp"
        android:textColor="@color/white"/>



</LinearLayout>