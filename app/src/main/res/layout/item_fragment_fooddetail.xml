<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="20dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/home_fragment_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imv_detailBack"
            android:layout_width="40dp"
            android:layout_marginStart="-10dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_arow_left" />
        <com.google.android.material.checkbox.MaterialCheckBox
            android:layout_width="45dp"
            style="@style/custom_check_box"
            android:layout_alignParentEnd="true"
            android:layout_height="45dp"
            android:checked="false"
            android:background="@drawable/bacgroud_seach"
            android:button="@drawable/custom_checkbox"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/fragment_fooddetail"
        android:layout_below="@+id/home_fragment_search"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_detail_hearder_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Clasicoo"
            android:layout_gravity="center"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/tv_detail_description"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_height="match_parent"
            android:textColor="@color/sub_text"
            android:text="Mixed Pizza with cheese "
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_caloris_item2"/>
            <TextView
                android:id="@+id/tv_detail_calories"
                android:layout_width="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:textColor="@color/sub_text"
                android:text="78 Calories"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln_imv_detail"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@id/fragment_fooddetail"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="300dp"
            android:layout_height="300dp"
            tools:ignore="MissingConstraints">
            <ImageView
                android:id="@+id/img_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bgr_splash_food"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_alignEnd="@+id/ln_imv_detail"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@+id/ln_imv_detail"
        android:layout_height="wrap_content">
        <include layout="@layout/item_quanlity"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_below="@id/ln_imv_detail">
        <TextView
            android:id="@+id/btn_detail_size_S"
            android:layout_width="70dp"
            android:gravity="center"
            android:background="@drawable/button_select_size"
            android:layout_height="60dp"
            android:text="S"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/btn_detail_size_M"
            android:layout_width="70dp"
            android:layout_marginStart="23dp"
            android:gravity="center"
            android:background="@drawable/bacgroud_seach"
            android:layout_height="60dp"
            android:text="M"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/btn_detail_size_L"
            android:layout_width="70dp"
            android:gravity="center"
            android:background="@drawable/bacgroud_seach"
            android:layout_marginStart="23dp"
            android:layout_height="60dp"
            android:text="L"
            android:textSize="24sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Price"
            android:textColor="@color/sub_text"/>
        <TextView
            android:id="@+id/tv_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:text="$7,90"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_goto_mycard"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content">
        <include layout="@layout/icon_shop_button"/>

    </LinearLayout>





</RelativeLayout>