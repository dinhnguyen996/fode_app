<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingHorizontal="20dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/home_fragment_sale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv_home_fragment_sale_tospecial"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_marginStart="-10dp"
            android:src="@drawable/img" />
        <ImageView
            android:id="@+id/imv_home_fragment_sale_to_search"
            android:layout_width="34dp"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:background="@drawable/bacgroud_seach"
            android:layout_height="34dp"
            android:src="@drawable/ic_seach_special" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/home_fragment_sale_title"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/home_fragment_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Food"
            android:fontFamily="sans-serif-thin"
            android:textSize="28sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Food Campaigns"
            android:textSize="28sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginStart="-10dp"
        android:layout_marginEnd="-10dp"
        android:layout_below="@id/home_fragment_sale_title"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent"
        android:id="@+id/rcv_fragment_homesale"/>

</RelativeLayout>